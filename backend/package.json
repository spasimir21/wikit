{
  "name": "wikit-backend",
  "version": "0.0.1",
  "description": "The backend for Wikit.",
  "author": "Spasimir Pavlov",
  "private": true,
  "license": "MIT",
  "scripts": {
    "build": "nest build",
    "format": "prettier --write \"apps/**/*.ts\" \"libs/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./apps/wikit/test/jest-e2e.json"
  },
  "dependencies": {
    "@nestjs/apollo": "^10.0.2",
    "@nestjs/common": "^8.0.0",
    "@nestjs/core": "^8.0.0",
    "@nestjs/graphql": "^10.0.2",
    "@nestjs/platform-express": "^8.0.0",
    "apollo-server-express": "^3.6.3",
    "graphql": "^16.3.0",
    "jsonwebtoken": "^8.5.1",
    "neo4j-driver": "^4.4.2",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.2",
    "rxjs": "^7.2.0",
    "sharp": "^0.30.1",
    "uuid": "^8.3.2",
    "webpack": "^5.68.0",
    "yaml": "^1.10.2"
  },
  "devDependencies": {
    "@nestjs/cli": "^8.0.0",
    "@nestjs/schematics": "^8.0.0",
    "@nestjs/testing": "^8.0.0",
    "@types/bcrypt": "^5.0.0",
    "@types/express": "^4.17.13",
    "@types/jest": "27.0.2",
    "@types/jsonwebtoken": "^8.5.8",
    "@types/multer": "^1.4.7",
    "@types/node": "^16.0.0",
    "@types/sharp": "^0.29.5",
    "@types/supertest": "^2.0.11",
    "@types/uuid": "^8.3.4",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "bcrypt": "^5.0.1",
    "eslint": "^8.0.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "jest": "^27.2.5",
    "prettier": "^2.3.2",
    "source-map-support": "^0.5.20",
    "supertest": "^6.1.3",
    "ts-jest": "^27.0.3",
    "ts-loader": "^9.2.3",
    "ts-node": "^10.0.0",
    "tsconfig-paths": "^3.10.1",
    "typescript": "^4.3.5"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/spasimir21/wikit.git"
  },
  "homepage": "https://github.com/spasimir21/wikit/tree/main/backend#readme",
  "bugs": {
    "url": "https://github.com/spasimir21/wikit/issues"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": ".",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "./coverage",
    "testEnvironment": "node",
    "roots": [
      "<rootDir>/apps/",
      "<rootDir>/libs/"
    ],
    "moduleNameMapper": {
      "^@wikit/neo4ogm(|/.*)$": "<rootDir>/libs/neo4ogm/src/$1",
      "^@wikit/config(|/.*)$": "<rootDir>/libs/config/src/$1",
      "^@wikit/database(|/.*)$": "<rootDir>/libs/database/src/$1",
      "^@wikit/utils(|/.*)$": "<rootDir>/libs/utils/src/$1"
    }
  }
}
